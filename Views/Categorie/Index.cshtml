@model IEnumerable<Caisse.Models.Categorie>

@{
    ViewData["Title"] = "Liste des catégories";
}

<h1>Liste des catégories (@Model.Count())</h1>

<p>
    <a class="btn btn-info" asp-action="Form">Ajouter une catégorie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                <Strong>Actions</Strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Form" asp-route-id="@item.Id">Modifier la catégorie</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Produits de type @item.Nom</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
